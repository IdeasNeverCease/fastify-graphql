{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./out/",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "./out"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
